# Base directory for the application
BASE_DIR=/opt/myapp/data

# Directory containing Metontiime configuration files
CONF_PATH=/opt/myapp/Metontiime/conf

# Path to the Metontiime Nextflow script
METONTIIME_SCRIPT=/opt/myapp/Metontiime/metontime.nf

# Directory where metadata files are stored
METADATA_PATH=/opt/myapp/metadata

# Default working directory (resolved relative to BASE_DIR)
DEFAULT_WORK_DIR=default/workdir

# Full path to the metadata Excel file
METADATA_EXCEL_FILE=/opt/myapp/metadata/metadata.xlsx
